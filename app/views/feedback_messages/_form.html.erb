<%= form_for @feedback_message, :html => { :class => 'form-horizontal' } do |f| %>
  <%= render(partial: 'layouts/creation_errors', locals: {object: @feedback_message}) %>

  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :user_id, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :posting_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :posting_id, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :email, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :body, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  feedback_messages_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
