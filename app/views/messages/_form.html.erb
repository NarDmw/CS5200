<%= form_for @message, :html => { :class => 'form-horizontal' } do |f| %>
  <%= render(partial: 'layouts/creation_errors', locals: {object: @message}) %>

  <div class="form-group">
    <%= f.label :conversation_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :conversation_id, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sender_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :sender_id, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :recipient_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :recipient_id, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :body, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t('helpers.links.cancel')),
                  messages_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
