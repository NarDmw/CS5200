<%= form_for @message, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :conversation_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :conversation_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sender_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sender_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :recipient_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :recipient_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :body, :class => 'form-control' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            messages_path, :class => 'btn btn-default' %>
 
<% end %>
