<%- model_class = Conversation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:poster_id) %>:</strong></dt>
  <dd><%= @conversation.poster_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:responder_id) %>:</strong></dt>
  <dd><%= @conversation.responder_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:posting_id) %>:</strong></dt>
  <dd><%= @conversation.posting_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              conversations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_conversation_path(@conversation), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              conversation_path(@conversation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
