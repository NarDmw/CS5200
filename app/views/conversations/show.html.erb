<%- model_class = Conversation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:poster_id) %></dt>
      <dd><pre class="prettyprint"><%= @conversation.poster %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:responder_id) %></dt>
      <dd><pre class="prettyprint"><%= @conversation.responder %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:posting_id) %></dt>
      <dd><pre class="prettyprint"><%= @conversation.posting_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              conversations_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_conversation_path(@conversation), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              conversation_path(@conversation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>