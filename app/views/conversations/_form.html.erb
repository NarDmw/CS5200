<%= form_for @conversation, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :poster_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :poster_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :responder_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :responder_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :posting_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :posting_id, :class => 'form-control' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t('helpers.links.cancel')),
            conversations_path, :class => 'btn btn-default' %>
 
<% end %>
