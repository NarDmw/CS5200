<%= form_for @review, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :reviewer_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :reviewer_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reviewee_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :reviewee_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :posting_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :posting_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :body, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :rating, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :rating, :class => 'form-control' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            reviews_path, :class => 'btn btn-default' %>
 
<% end %>
