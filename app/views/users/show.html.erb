<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:location_id) %></dt>
      <dd><pre class="prettyprint"><%= @user.location %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:user_name) %></dt>
      <dd><pre class="prettyprint"><%= @user.user_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:first_name) %></dt>
      <dd><pre class="prettyprint"><%= @user.first_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:last_name) %></dt>
      <dd><pre class="prettyprint"><%= @user.last_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:email) %></dt>
      <dd><pre class="prettyprint"><%= @user.email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:score) %></dt>
      <dd><pre class="prettyprint"><%= @user.score %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:num_responses) %></dt>
      <dd><pre class="prettyprint"><%= @user.num_responses %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:is_active) %></dt>
      <dd><pre class="prettyprint"><%= @user.is_active %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:is_available) %></dt>
      <dd><pre class="prettyprint"><%= @user.is_available %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:is_admin) %></dt>
      <dd><pre class="prettyprint"><%= @user.is_admin %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:password_digest) %></dt>
      <dd><pre class="prettyprint"><%= @user.password_digest %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>