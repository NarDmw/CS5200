<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :location_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :location_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :first_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :score, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :score, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :num_responses, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :num_responses, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :is_active, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :is_active, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :is_available, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :is_available, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :is_admin, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :is_admin, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_digest, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :password_digest, :class => 'form-control' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            users_path, :class => 'btn btn-default' %>
 
<% end %>
